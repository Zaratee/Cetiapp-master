<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:background="@drawable/fondo1">
    <TextView
        android:id="@+id/txtV_tipoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de usuario"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textSize="35dp"
        android:layout_marginTop="40dp"
        android:textColor="#fff"/>

<Button
    android:id="@+id/btn_alumnoAct1"
    android:layout_marginTop="160dp"
    android:layout_centerHorizontal="true"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@drawable/buton_round"
    android:text="Alumno"/>

<Button
    android:id="@+id/btn_docenteAct1"
    android:layout_centerHorizontal="true"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/buton_round"
    android:text="Docente"
    android:layout_marginTop="50dp"
    android:layout_below="@+id/btn_alumnoAct1" />

    <Button
        android:id="@+id/btn_adminAct1"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buton_round"
        android:text="Admin"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_docenteAct1"/>

</RelativeLayout>